---
// Ranks Overview page stub
import MainLayout from '../../layouts/MainLayout.astro';
import RankCard from '../../components/RankCard.astro';
import ranks from '../../data/ranks.json';
---
<MainLayout>
  <div class="max-w-4xl mx-auto p-4">
    <div x-data="{ search: '' }">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 gap-2">
        <h2 class="text-2xl font-bold">All Ranks</h2>
        <input 
          type="search" 
          placeholder="Search ranks..." 
          class="w-full sm:w-64 px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary transition"
          x-model="search"
        />
      </div>
      <div class="ranks-list grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-4">
        {ranks.map(rank => (
          <a
            href={`/ranks/${rank.slug}`}
            x-show={`!search || '${rank.name.toLowerCase()}'.includes(search.toLowerCase())`}
            style="display: none;"
          >
            <RankCard slug={rank.slug} name={rank.name}>{rank.name}</RankCard>
          </a>
        ))}
      </div>
    </div>
  </div>
</MainLayout>
