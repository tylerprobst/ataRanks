---
// Techniques Overview page stub
import MainLayout from '../../layouts/MainLayout.astro';
import TechniqueCard from '../../components/TechniqueCard.astro';

const techniques = [
  { name: 'Front Kick' },
  { name: 'Side Kick' },
  { name: 'Roundhouse Kick' },
  { name: 'Back Fist' },
  { name: 'Palm Strike' },
  { name: 'Elbow Strike' }
];
---
<MainLayout>
  <div class="max-w-4xl mx-auto p-4">
    <div x-data="{ search: '' }">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 gap-2">
        <h2 class="text-2xl font-bold">All Techniques</h2>
        <input 
          type="search" 
          placeholder="Search techniques..." 
          class="w-full sm:w-64 px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary transition"
          x-model="search"
        />
      </div>
      <div class="techniques-list grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-4">
        {techniques.map(technique => (
          <div
            x-show={`!search || '${technique.name.toLowerCase()}'.includes(search.toLowerCase())`}
            style="display: none;"
          >
            <TechniqueCard>{technique.name}</TechniqueCard>
          </div>
        ))}
      </div>
    </div>
  </div>
</MainLayout> 